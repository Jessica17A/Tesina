@model WebGradu.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";
}

<style>
    .steps-visual {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        max-width: 900px;
        margin: 0 auto 16px;
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 12px;
        color: #000f89;
        min-width: 72px;
        text-align: center
    }

    .step-icon {
        width: 64px;
        height: 64px;
        border: 3px solid #000f89;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        margin-bottom: 8px;
        font-size: 26px
    }

    .steps-visual .connector {
        flex: 1;
        height: 3px;
        background: #000f89;
        opacity: .3
    }

    .form-card {
        background: transparent;
        border: 2px solid #000f89;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,.1);
        padding: 24px;
        max-width: 650px;
        margin: 0 auto;
    }

    .label-required::after {
        content: " *";
        color: #dc3545;
        font-weight: 600
    }

    .preview-img {
        max-height: 120px
    }
</style>

<div class="container mt-5" style="max-width:980px;">
    <!-- Barra de iconos (solo visual) -->
    <div class="steps-visual">
        <div class="step-item">
            <div class="step-icon"><i class="fa-solid fa-box"></i></div>
            <span>Producto</span>
        </div>
        <div class="connector"></div>
        <div class="step-item">
            <div class="step-icon"><i class="fa-solid fa-tag"></i></div>
            <span>Precios</span>
        </div>
        <div class="connector"></div>
        <div class="step-item">
            <div class="step-icon"><i class="fa-solid fa-layer-group"></i></div>
            <span>Categoría</span>
        </div>
    </div>
</div>

<div class="form-card">
    <form asp-action="Crear" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <h2 class="mb-4 text-center">Crear Producto</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label label-required"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label label-required"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del producto" required></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <!-- Precios en dos columnas con símbolo de moneda -->
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label label-required">Precio de Compra</label>
                <div class="input-group">
                    <span class="input-group-text">Q</span>
                    <input name="Precio_Compra" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                </div>
                <span asp-validation-for="Precio_Compra" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label label-required">Precio de Venta</label>
                <div class="input-group">
                    <span class="input-group-text">Q</span>
                    <input name="Precio_Venta" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                </div>
                <span asp-validation-for="Precio_Venta" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 mt-3">
            <label for="Fk_Categoria" class="form-label label-required">Categoría</label>
            <select asp-for="Fk_Categoria" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaID", "NombreCategoria"))" required>
                <option value="">Seleccione una categoría</option>
            </select>
            <span asp-validation-for="Fk_Categoria" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label for="file" class="form-label">Subir Foto</label>
            <input id="file" type="file" name="file" class="form-control" accept="image/*" aria-describedby="fileHelp" />
          
            <img id="preview" class="preview-img img-thumbnail mt-2 d-none" alt="Vista previa" />
        </div>

        <div class="d-flex justify-content-center gap-2">
            <button id="btnGuardar" type="submit" class="btn btn-outline-primary">
                <i class="fa-regular fa-floppy-disk me-1" aria-hidden="true"></i>
                <span>Guardar</span>
            </button>
           
        </div>
    </form>
