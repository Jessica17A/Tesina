@page
@model WebGradu.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_Plantilla.cshtml" : "~/Views/Shared/_Vendedor.cshtml";
    ViewData["Title"] = "MI PERFIL";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row g-4">
        <!-- Card: Datos personales (solo visualización) -->
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <strong>Datos personales</strong>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Nombre</dt>
                        <dd class="col-sm-7">@Model.FirstName</dd>

                        <dt class="col-sm-5">Apellido</dt>
                        <dd class="col-sm-7">@Model.LastName</dd>

                        <dt class="col-sm-5">Correo</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Roles</dt>
                        <dd class="col-sm-7">@Model.RolesCsv</dd>
                    </dl>
                   
                </div>
            </div>
        </div>

        <!-- Card: Cambiar contraseña -->
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <strong>Actualizar contraseña</strong>
                </div>
                <div class="card-body">
                    <form id="change-password-form" method="post" class="p-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" placeholder="Contraseña actual" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.OldPassword" class="form-label">Contraseña actual</label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" placeholder="Nueva contraseña" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.NewPassword" class="form-label">Nueva contraseña</label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmar nueva contraseña" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar nueva contraseña</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2">Actualizar contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
